<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base style for rounded buttons -->
    <style name="BaseRoundedButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_button_ripple</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Button Variants -->
    <style name="RoundedButton_Blue" parent="BaseRoundedButton">
        <item name="android:backgroundTint">@android:color/holo_blue_dark</item>
    </style>

    <style name="RoundedButton_Purple" parent="BaseRoundedButton">
        <item name="android:backgroundTint">@android:color/holo_purple</item>
    </style>

    <style name="RoundedButton_Green" parent="BaseRoundedButton">
        <item name="android:backgroundTint">@android:color/holo_green_light</item>
    </style>

    <style name="RoundedButton_Yellow" parent="BaseRoundedButton">
        <item name="android:backgroundTint">@android:color/holo_orange_light</item>
    </style>

    <style name="RoundedButton_Red" parent="BaseRoundedButton">
        <item name="android:backgroundTint">@android:color/holo_red_dark</item>
    </style>

    <style name="RoundedButton_Silver" parent="BaseRoundedButton">
        <item name="android:backgroundTint">@android:color/holo_blue_bright</item>
    </style>

    <style name="RoundedButton_White" parent="BaseRoundedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ExtraRunButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    // Text Styles
    <style name="BaseTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    // Text Styles
    <style name="BaseTextStyle16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    // Text Styles
    <style name="BaseTextStyle_blue">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
    // Text Styles
    <style name="BaseTextStyle_dark_blue">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="BaseTextStyle_teal">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="TitleTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleTextStyle14sp" parent="BaseTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleTextStyle14sp_black" parent="BaseTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleTextStyle16sp" parent="BaseTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="ScoreTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ScoreTextStyle_allCAPS" parent="BaseTextStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ScoreTextStyle24sp_bold" parent="BaseTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="ScoreTextStyle18sp" parent="BaseTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ScoreTextStyle18sp_bold" parent="BaseTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>



    <style name="SubTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Theme.TransparentDrawer" parent="Theme.CricketScoreAPP">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="RoundedBottomCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>


</resources>
